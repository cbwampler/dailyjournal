@model DailyJournal.Models.MealModels.MealDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>MealDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MealId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MealId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.WeekDay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WeekDay)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MealDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MealDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MealTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MealTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MealName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MealName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Notes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Notes)
        </dd>

    </dl>
</div>
<br />
<h4>Foods added to this meal</h4>
<div>
<table  class="table">
   
    <tr>
        <th>Food</th>
        <th>Calories</th>
    </tr>

    @foreach (var item in Model.Foods)
    {<tr>
        <td>@Html.DisplayFor(modelItem => item.FoodItem)</td>
        <td>@Html.DisplayFor(modelItem => item.Calories)</td>
    </tr>
    }
</table>
</div>

<hr/>

<p>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.MealId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
